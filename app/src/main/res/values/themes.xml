<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorkItOut" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/deep_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hot_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:navigationBarColor">?attr/backgroundColor</item>

        <item name="android:fontFamily">@font/poppins_reg</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--    CardView-->
    <style name="Theme.WorkoutApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/backgroundColor</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="Theme.WorkoutApp.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackColor">@color/light_gray</item>
        <item name="trackThickness">2.5dp</item>
        <item name="indicatorSize">50dp</item>
    </style>

    <!--    Bottom Navigation View-->
    <style name="BottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_bar_item_color_night</item>
        <item name="itemIconTint">@color/bottom_nav_bar_item_color_night</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">?backgroundColor</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Theme.WorkoutApp.ToolbarTextAppearance</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
    </style>

    <style name="Scroll" parent="">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Theme.WorkoutApp.ToolbarTextAppearance</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearance">@style/RoundCut</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textAppearance">@style/Theme.WorkoutApp.ChipTextAppearance</item>
        <item name="android:layout_margin">0dp</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipBackgroundColor">@color/chip_checked_state</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/chip_text_color_checked_state_day</item>
        <item name="chipStartPadding">@dimen/parent_padding_10</item>
        <item name="chipEndPadding">@dimen/parent_padding_10</item>
    </style>

    <style name="SkipIconColor">
        <item name="tint">@color/black</item>
    </style>

    <style name="SelectUnitChip" parent="Chip">
        <item name="shapeAppearance">@style/CircularCut</item>
    </style>


    <style name="Theme.WorkItOut" parent="Base.Theme.WorkItOut" />
</resources>